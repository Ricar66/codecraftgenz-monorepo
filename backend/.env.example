# =============================================
# BACKEND - Environment Variables
# =============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to the repository!
# =============================================

# Server
NODE_ENV=development
PORT=8080

# Database
# Local MySQL: mysql://root:root@localhost:3306/codecraftgenz
# Render PostgreSQL: postgresql://user:pass@host:5432/dbname
DATABASE_URL="postgresql://user:password@localhost:5432/codecraftgenz"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Email (Gmail SMTP)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Mercado Pago
MP_ENV=sandbox
MERCADO_PAGO_PUBLIC_KEY=TEST-xxx
MERCADO_PAGO_ACCESS_TOKEN=TEST-xxx
MERCADO_PAGO_WEBHOOK_SECRET=your-webhook-secret

# Admin
ADMIN_RESET_TOKEN=generate-a-secure-random-token
